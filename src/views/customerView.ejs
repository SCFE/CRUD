<% include partials/x_headers%>





<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Eliminar</th>
            <th>Actualizar</th>
          </tr>
        </thead>
        <tbody>
            <% if(data){%>

              <% for(var i =0; i<data.length; i++){%>

                <tr>
                  <td><%= data[i].id%></td>
                  <td><%= data[i].name%></td>
                  <td><%= data[i].address%></td>
                  <td><%= data[i].phone%></td>
                  <td>
                      <a href='/delete/<%= data[i].id %>' class='btn btn-danger'>Eliminar</a>
                  </td>
                  <td>
                      <a href='/update/<%= data[i].id %>' class='btn btn-info'>Actualizar</a>
                  </td>
                </tr>
              <%}%>
            <%}%>
            
        </tbody>
      </table>
    </div>
    <div class="col-md-5">

      <div class="card">
        <div class="card-body">
      <form  action="/add" method="post">
          <div class="form-group">
              <input type="text" name="name" placeholder="Ingrese nombre" class="form-control">
         </div>
         <div class="form-group">
             <input type="text" name="address" placeholder="Ingrese direccion" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="phone" placeholder="Ingrese telefono" class="form-control">
       </div>
       <button type="submit" class="btn btn-primary">
            Guardar comprador
       </button>
        </div>
      </div>
    </div>
  </div>
</div>
</form>


<%include partials/x_footers%>
